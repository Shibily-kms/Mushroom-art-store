<script>
    const form = document.getElementById('formsing');
    const firstname = document.getElementById('firstname');
    const lastname = document.getElementById('lastname');
    const username = document.getElementById('username1');
    const email = document.getElementById('email1');
    const password = document.getElementById('password1');
    const password2 = document.getElementById('password21');



    function checkaInputs() {

        const firstnameValue = firstname.value;
        const lastnameValue = lastname.value;
        const usernameValue = username.value;
        const emailValue = email.value;
        const passwordValue = password.value;
        const password2Value = password2.value;


        if (firstnameValue === '') {
            setErrorFor(firstname, 'Enter Fist name');
            return false;
        } else if (!isNaN(firstnameValue)) {
            setErrorFor(firstname, 'Enter letters only')
            return false;
        } else {
            setSuccessFor(firstname);
        }

        if (lastnameValue === '') {
            setErrorFor(lastname, 'Enter Last name');
            return false;
        } else if (!isNaN(lastnameValue)) {
            setErrorFor(lastname, 'Enter letters only')
            return false;
        } else {
            setSuccessFor(lastname);
        }


        if (usernameValue === '') {
            setErrorFor(username, 'Enter full name');
            return false;
        } else {
            setSuccessFor(username);
        }

        if (emailValue === '') {
            setErrorFor(email, 'Enter email id');
            return false;
        } else if (!isEmail(emailValue)) {
            setErrorFor(email, 'Not a valid email');
            return false;
        } else {
            setSuccessFor(email);
        }

        if (passwordValue === '') {
            setErrorFor(password, 'Enter password');
            return false;
        } else {
            setSuccessFor(password);
        }

        if (password2Value === '') {
            setErrorFor(password2, 'Enter confiem password');
            return false;
        } else if (passwordValue !== password2Value) {
            setErrorFor(password2, 'Passwords does not match');
            return false;
        } else {
            setSuccessFor(password2);
        }
    }

    function setErrorFor(input, message) {
        const formGroupAS = input.parentElement;
        const small = formGroupAS.querySelector('small');
        formGroupAS.className = 'form-groupAS error';
        small.innerText = message;
    }

    function setSuccessFor(input) {
        const formGroupAS = input.parentElement;
        formGroupAS.className = 'form-groupAS success';
    }
    function isEmail(email) {
        return /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(email);
    }

</script>