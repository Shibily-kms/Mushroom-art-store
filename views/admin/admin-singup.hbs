<script>
    const form = document.getElementById('adminSingupForm');
    const username1 = document.getElementById('adminName1');
    const username2 = document.getElementById('adminName2');
    const email = document.getElementById('adminEmail1');
    const password11 = document.getElementById('adminPassword1');
    const password12 = document.getElementById('adminCPassword1');
    const password21 = document.getElementById('adminPassword2');
    const password22 = document.getElementById('adminCPassword2');



    function checkaInputs() {



        const username1Value = username1.value;
        const username2Value = username2.value;
        const emailValue = email.value;
        const password11Value = password11.value;
        const password12Value = password12.value;
        const password21Value = password21.value;
        const password22Value = password22.value;

        if (username1Value === '') {
            setErrorFor(username1, 'Enter First name');
            return false;
        } else {
            setSuccessFor(username1);
        }
        if (username2Value === '') {
            setErrorFor(username2, 'Enter Last name');
            return false;
        } else {
            setSuccessFor(username2);
        }

        if (emailValue === '') {
            setErrorFor(email, 'Enter email id');
            return false;
        } else if (!isEmail(emailValue)) {
            setErrorFor(email, 'Not a valid email');
            return false;
        } else {
            setSuccessFor(email);
        }

        if (password11Value === '') {
            setErrorFor(password11, 'Enter password One');
            return false;
        } else {
            setSuccessFor(password11);
        }

        if (password12Value === '') {
            setErrorFor(password12, 'Enter confiem password One');
            return false;
        } else if (password11Value !== password12Value) {
            setErrorFor(password12, 'Password One does not match');
            return false;
        } else {
            setSuccessFor(password12);
        }

         if (password21Value === '') {
            setErrorFor(password21, 'Enter password Two');
            return false;
        } else if(password11Value === password21Value){
            setErrorFor(password21, 'Password One and Two are sim, Enter Diffreand Passwords')
            return false;
        }else {
            setSuccessFor(password21);
        }

        if (password22Value === '') {
            setErrorFor(password22, 'Enter confiem password Two');
            return false;
        } else if (password21Value !== password22Value) {
            setErrorFor(password22, 'Password Two does not match');
            return false;
        } else {
            setSuccessFor(password22);
        }
    }

    function setErrorFor(input, message) {
        const formGroupAdS = input.parentElement;
        const small = formGroupAdS.querySelector('small');
        formGroupAdS.className = 'form-groupAdS error';
        small.innerText = message;
    }

    function setSuccessFor(input) {
        const formGroupAdS = input.parentElement;
        formGroupAdS.className = 'form-groupAdS success';
    }
    function isEmail(email) {
        return /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(email);
    }

</script>