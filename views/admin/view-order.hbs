                </div>
            </div>


            <div class=" col-md-8 col-sm-7 col-xs-12">
                <div>
                    <div class="OrviewUserBorder">
                        <div>
                            {{#if userDetails.ArId}}
                            <img class="OrViwImage" src="/artist-images/{{userDetails._id}}.jpg " alt="artistImage">
                            {{else}}
                            <img class="OrViwImage" src="/user-images/{{userDetails._id}}.jpg " alt="userImage">
                            {{/if}}
                        </div>
                        <div>
                            {{#if userDetails.ArId}}
                            <h4 class="text-primary ">{{userDetails.FirstName}} {{userDetails.LastName}} -
                                {{userDetails.ArId}}</h4>
                            {{else}}

                            <h4 class="text-primary ">{{userDetails.FirstName}} {{userDetails.LastName}} -
                                {{userDetails.UrId}}</h4>
                            {{/if}}
                            <h4>Email: {{userDetails.EmailId}}</h4>
                            <h4>Mobile: {{orderDetails.address.Mobile}}</h4>
                            <h4>Delivery address: {{orderDetails.address.House}}, {{orderDetails.address.Area}},
                                {{orderDetails.address.City}}, {{orderDetails.address.Landmark}},
                                {{orderDetails.address.Pincode}}, {{orderDetails.address.State}},
                                {{orderDetails.address.Country}} </h4>
                            <h4>Product Count: {{orderProductCount}} | Method: {{orderDetails.paymentMethod}}</h4>
                            <h4>Total Amount: ₹{{orderDetails.totalAmout}}.00</h4>
                            <h4>Date: {{orderDetails.date}}</h4>
                        </div>
                    </div>
                </div>
            </div>


            <div class="OrVIewHr">
                <h6 class="text-center">mushroom store</h6>
            </div>
            <hr style="margin-top: -10px;">
            <div>
                {{!-- --}}
                {{#each orderProductDetails}}
                <div class="col-xs-12 col-sm-6  col-md-4 col-lg-3 ">
                    <div class="cardBg mb-5 ">

                        <img class="img-responsive cardImage" src="/products-images/{{this.product._id}}m-art.jpg"
                            alt="Order product image">

                        <div class="card-body">
                            <h5 class="card-title ">{{this.product.ProductName}}</h5>
                            <p class="card-text">Category : {{this.product.Category}}</p>
                            <p class="card-text">Quantity : {{this.quantity}}</p>
                            <p class="card-text">ProId : {{this.product.PrId}}</p>
                            <p class="card-text">Artist Id : {{this.product.ArId}}</p>
                            <h1 class="proPrice text-end">₹ {{this.product.Price}} x {{this.quantity}}</h1>

                        </div>
                    </div>
                </div>
                {{/each}}
                {{!-- --}}

            </div>
        </div>
    </div>
</section>


<style>
    .form-check {
        font-size: large;
    }
</style>

<script>
    function showRadios() {
        document.getElementById('ifYes').style.display = 'block';
        document.getElementById('ifNo').style.display = 'none';
    }
    function hideYes() {
        document.getElementById('YesButton').style.display = 'none';
        document.getElementById('OrviewPending').style.paddingTop = '70px';
        document.getElementById('OrviewPending').style.paddingBottom = '70px';
    }
</script>