<section class="">
    <div class="container">
        <div class="OrViewBorder">
            <div style="padding: 10px;" class="col-md-4 col-sm-5 col-xs-12">
                <div class="OrViewSatusBorder ">
                    <h3 style="font-weight: 600;">Change status</h3>
                    <h5 id="statusvalue">Current status : <span
                            class="{{orderDetails.status}}">{{orderDetails.status}}</span></h5>

                    {{#if Pending}}
                    <div id="ifNo" style="display: block;">
                        <h3 id="OrviewPending" class="OrviewPending"> <i style="font-size: 22px;"
                                class="bi bi-exclamation-circle"></i>
                            <br> This order's payment <br> not completed
                        </h3>
                        <div id="YesButton">

                            <h3 class="OrviewPending" style="color: rgb(88, 88, 88);">Do you want to change the status
                                of this order?</h3>
                            <div class="OrviewPendigButtonDiv">
                                <button class="OrviewPendigButton1" onclick="showRadios()">Yes</button>
                                <button class="OrviewPendigButton2" onclick="hideYes()">No</button>

                            </div>
                        </div>
                    </div>


                    <div id="ifYes" style="display: none;">
                        <form action="/admin/all-orders/change-status/{{orderDetails._id}}" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios1" {{#if
                                    Placed}} checked {{/if}} value="Placed">
                                <label class="form-check-label" for="exampleRadios1">
                                    Order Placed
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios2" {{#if
                                    Confiemed}} checked {{/if}} value="Confiemed">
                                <label class="form-check-label" for="exampleRadios2">
                                    Confiemed
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios3" {{#if
                                    Processed}} checked {{/if}} value="Processed">
                                <label class="form-check-label" for="exampleRadios1">
                                    Processed
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios4" {{#if
                                    Shipped}} checked {{/if}} value="Shipped">
                                <label class="form-check-label" for="exampleRadios2">
                                    Shipped
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios5" {{#if
                                    Delivered}} checked {{/if}} value="Delivered">
                                <label class="form-check-label" for="exampleRadios2">
                                    Delivered
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios6" {{#if
                                    Rejected}} checked {{/if}} value="Rejected">
                                <label style="color: red;" class="form-check-label" for="exampleRadios2">
                                    Rejected
                                </label>
                            </div>
                            <button type="submit" class="OrviewStatusButton">Submit</button>
                        </form>
                    </div>


                    {{else}} {{#if Delivered}}
                    <div id="ifNo" style="display: block;">
                        <h3 id="OrviewPending" class="OrviewDelivery"> <i style="font-size: 22px;"
                                class="bi bi-check-circle"></i>
                            <br> This order's delivery <br> succesfully completed
                        </h3>
                        <div id="YesButton">

                            <h3  class="OrviewAnyprodblem" onclick="showRadios()" > Any problems?
                                </h3>
                            
                        </div>
                    </div>


                    <div id="ifYes" style="display: none;">
                        <form action="/admin/all-orders/change-status/{{orderDetails._id}}" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios1" {{#if
                                    Placed}} checked {{/if}} value="Placed">
                                <label class="form-check-label" for="exampleRadios1">
